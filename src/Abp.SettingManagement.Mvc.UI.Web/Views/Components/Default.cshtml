@using Abp.SettingManagement.Mvc.UI.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@model IEnumerable<Abp.SettingManagement.Mvc.UI.Web.Views.Components.SettingHtmlInfo>
@inject IHtmlLocalizer<AbpSettingManagementMvcUIResource> L

<form method="post">
    @foreach (var group in Model.GroupBy(sd => sd.Group2))
    {
        <abp-card>
            <abp-card-header>
                <h4>@L[group.Key]</h4>
            </abp-card-header>
            <abp-card-body>
                @foreach (var settingHtmlInfo in group)
                {
                    <label for="@settingHtmlInfo.Id">@settingHtmlInfo.DisplayName</label>
                    @await Html.PartialAsync($"/Views/Components/Partials/_{settingHtmlInfo.Type.ToPascalCase()}.cshtml", settingHtmlInfo)
                }
            </abp-card-body>
        </abp-card>
    }
    <abp-button type="submit" button-type="Primary" text="@L["Save"].Value"/>
</form>